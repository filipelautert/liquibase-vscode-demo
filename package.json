{
  "name": "liquibase-license-demo",
  "displayName": "liquibase-license-demo",
  "description": "Liquibase License Demo for DAT-19784",
  "version": "0.0.1",
  "repository": {
    ""
  },
  "engines": {
    "vscode": "^1.97.2"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "liquibase-license-demo.update",
        "title": "Liquibase update"
      }
    ],
    "configuration": {
      "title": "Liquibase settings",
      "properties": {
        "liquibase.home": {
            "type": ["string"],
            "default": null,
            "description": "Liquibase Home Path"
        },
        "liquibase.javahome": {
            "type": ["string"],
            "default": null,
            "description": "Java Home to be used with Liquibase"
        },
        "liquibase.licensekey": {
            "type": ["string"],
            "default": null,
            "description": "Liquibase PRO License key"
        },
        "liquibase.validated": {
          "type": ["boolean"],
          "default": false,
          "description": "Is Liquibase License key valid?"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.97.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "eslint": "^9.21.0",
    "typescript": "^5.7.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
